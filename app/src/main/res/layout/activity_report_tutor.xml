<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00CCCC"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reportTutor">

    <EditText
        android:id="@+id/rateTutorBox"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:ems="10"
        android:hint="Enter tutor's email here"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.427"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.243" />

    <EditText
        android:id="@+id/scoreBox"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:ems="10"
        android:hint='"Enter score 1-5"'
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rateTutorBox"
        app:layout_constraintVertical_bias="0.21" />

    <Button
        android:id="@+id/rateTutorButton"
        android:layout_width="159dp"
        android:layout_height="92dp"
        android:background="#a9fbfc"
        android:onClick="rateTutor"
        android:text="@string/confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreBox"
        app:layout_constraintVertical_bias="0.222" />
</androidx.constraintlayout.widget.ConstraintLayout>