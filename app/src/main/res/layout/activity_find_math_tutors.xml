<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00CCCC"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".find_math_tutors">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tutorList"
        android:layout_width="448dp"
        android:layout_height="454dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText10"
        app:layout_constraintVertical_bias="0.461" />

    <EditText
        android:id="@+id/editText10"
        android:layout_width="215dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="@string/search"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052" />

    <Button
        android:id="@+id/button16"
        android:layout_width="104dp"
        android:layout_height="49dp"
        android:background="#CCFFFF"
        android:onClick="findMathTutors"
        android:text="@string/findTutors"
        app:layout_constraintBottom_toTopOf="@+id/tutorList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText10"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>